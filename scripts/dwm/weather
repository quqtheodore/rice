#!/bin/bash
KEY=key
UNITS=metric
CITY=Obolon
URL="https://api.openweathermap.org/data/2.5/weather?q=${CITY}&units=${UNITS}&appid=${KEY}"
while :
do
RESPONSE=$(curl -s "${URL}")

WEATHER=$(echo "${RESPONSE}" | jq -r '.weather[0].description')
TEMP=$(echo "${RESPONSE}" | jq -r '.main.temp')

echo "$WEATHER $TEMPÂ°" > ~/.config/dwm/barweather
~/.config/dwm/bar
sleep 2m 
done
